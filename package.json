{
  "name": "quick-credit",
  "version": "1.0.0",
  "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals with the purpose to help solve problems of financial inclusion as a way to alleviate poverty and empower low income earners.",
  "main": "index.js",
  "scripts": {
    "deploy": "gh-pages -d UI",
    "start": "nodemon src/server.js --exec babel-node",
    "dev-start": "babel-watch ./src/server.js",
    "build": "babel src -d dist",
    "test": "mocha --require babel-core/register src/tests/apps.js || true",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/femitj/Quick-Credit.git"
  },
  "author": "Tijani Femi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/femitj/Quick-Credit/issues"
  },
  "homepage": "https://github.com/femitj/Quick-Credit#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "gh-pages": "^2.0.1",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.8",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "supertest": "^4.0.2"
  }
}
